<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/mod_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_minecraft_cube"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mod_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:fontFamily="@font/misans"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/mod_icon"
        app:layout_constraintTop_toTopOf="@id/mod_icon"
        tools:text="Furnicraft Addon" />

    <TextView
        android:id="@+id/mod_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/misans"
        android:maxLines="1"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/mod_title"
        app:layout_constraintTop_toBottomOf="@id/mod_title"
        tools:text="by RobertGamer69" />

    <TextView
        android:id="@+id/mod_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/misans"
        android:maxLines="2"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/mod_title"
        app:layout_constraintTop_toBottomOf="@id/mod_author"
        tools:text="The best furniture addon for Minecraft Bedrock! Contains over 500 pieces of furniture." />

    <TextView
        android:id="@+id/mod_metadata"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/misans"
        android:maxLines="2"
        android:textColor="@color/text_secondary"
        android:textSize="10sp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/mod_title"
        app:layout_constraintTop_toBottomOf="@id/mod_description"
        tools:text="1.2M Downloads • Updated Oct 24 • 12MB • 1.20.40 • Addons" />

</androidx.constraintlayout.widget.ConstraintLayout>
